---
import Header from "../components/Header.astro";
import Hero from "../components/Hero.astro";
import Lightbox from "../components/Lightbox.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<script src="../scripts/main_nav.ts"></script>
<script src="../scripts/dark_mode.ts"></script>

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="The personal website of Avram Eisner."
    />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <script type="text/javascript">
      // Set dark class on html tag if dark-mode is set in localstorage
      if (localStorage.getItem("dark-mode-toggle") === 'dark') {
        document.querySelector("html").classList.add('dark')
      }
    </script>
  </head>
  <body class="bg-blue-500 dark:bg-slate-900">
    <div class="wrapper">
      <Header />
      <Hero />
      <main>
        <slot />
      </main>
    </div>
    <Lightbox />
  </body>
</html>

<style is:global>
  @tailwind base;
  @tailwind utilities;

  @layer base {
    .wrapper {
      @apply flex flex-col items-stretch container lg:max-w-screen-lg mx-auto;
      @apply shadow-xl shadow-slate-600;
      @apply dark:shadow-none;
      @apply md:rounded-b-md md:mb-8;
      min-height: 100vh;
    }
    main {
      @apply text-slate-900 bg-blue-300;
      @apply dark:text-slate-200 dark:bg-blue-900;
      @apply flex-auto relative p-4 h-full;
      @apply md:p-10 md:rounded-b-md;
    }
  }
</style>
