---
import Header from "../components/Header.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en" class="bg-blue-200">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="The personal website of me, Avram Eisner."
    />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/gh/iconoir-icons/iconoir@main/css/iconoir.css">
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <Header />
    <div class="container lg:max-w-screen-lg mx-auto mb-8">
      <div class="bg-purple-500 border-t-slate-200 border-t-2 h-48 hero"></div>
      <main
        class="text-slate-200 bg-blue-900 p-14 rounded-b-md border-t-slate-200 border-t-2"
      >
        <slot />
      </main>
    </div>
  </body>
</html>

<style is:global>
  .hero {
    background: center / cover no-repeat
      url(https://dummyimage.com/800x360/fff/aaa);
  }
</style>
