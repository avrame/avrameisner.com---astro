---
interface Props {
  level: 1 | 2 | 3 | 4 | 5 | 6;
}

const { level } = Astro.props;

let Tag;
let text_size;
let text_color;
let margin_btm;
let other_classes;
switch (level) {
  case 1:
    Tag = "h1";
    text_size = "text-3xl";
    margin_btm = "mb-5";
    break;
  case 2:
    Tag = "h2";
    text_size = "text-2xl";
    text_color = "text-cyan-400";
    margin_btm = "mb-3";
    break;
  case 3:
    Tag = "h3";
    text_size = "text-xl";
    text_color = "text-fuchsia-400";
    margin_btm = "mb-2";
    break;
  case 4:
    Tag = "h4";
    text_size = "text-lg";
    text_color = "text-indigo-400";
    margin_btm = "mb-2";
    break;
  case 5:
    Tag = "h5";
    text_size = "text-md";
    margin_btm = "mb-2";
    break;
  case 6:
    Tag = "h6";
    text_size = "text-sm";
    margin_btm = "mb-2";
    break;
}
---

<Tag class:list={[text_size, margin_btm, text_color, other_classes]}>
  <slot />
</Tag>
