---
const {url} = Astro.props;
---

<li class="art-link">
  <a href={url} style={`background-image: url(${url});`}>
    <div class="back-drop">
      <span class="title"><slot /></span>
    </div>
  </a>
</li>

<style>
  @tailwind components;

  @layer components {
    .art-link {
      @apply rounded-lg;
    }
    .art-link a {
      @apply aspect-square bg-cover bg-center block w-full;
      @apply rounded-lg;
      &:hover {
        .title {
          @apply visible;
        }
        .back-drop {
          background: rgba(0, 0, 48, .66);
        }
      }
    }
    .art-link .title {
      @apply text-xl;
      @apply invisible flex justify-center items-center w-full h-full;
    }
    .art-link .back-drop {
        @apply w-full h-full;
        @apply rounded-lg;
    }
  }
</style>