---
import Nav from "./Nav.astro";
---

<header>
  <button id="open_nav_btn"><i class="iconoir-menu"></i></button>
  <a href="/"><div class="logo"><span>AE</span></div></a>
  <Nav />
</header>

<style>
  @tailwind base;
  @tailwind components;

  @layer base {
    header {
      @apply bg-blue-700;
      @apply z-50 flex flex-col items-center sticky inset-y-0;
      @apply md:bg-blue-600 md:justify-between md:flex-row;
    }
  }

  @layer components {
    #open_nav_btn {
      @apply text-2xl text-slate-200 absolute left-2 top-2;
      @apply md:hidden;
    }
    .logo {
      @apply bg-purple-800 text-white shadow-inner shadow-slate-800 border-black;
      @apply w-12 h-12 flex justify-center items-center rounded-full m-3;
    }
  }
</style>