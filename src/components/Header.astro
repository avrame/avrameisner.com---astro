---
import Nav from "./Nav.astro";
import { Icon } from 'astro-icon'
---

<header>
  <button id="open_nav_btn" aria-label="Open Main Nav">
    <Icon pack="iconoir" name="menu">
  </button>
  <a href="/" class="logo"><span>AE</span></a>
  <Nav />
  <dark-mode-toggle
    id="dark-mode-toggle"
    appearance="toggle"
    permanent="true"
  ></dark-mode-toggle>
</header>

<style>
  @tailwind base;
  @tailwind components;

  :root {
    --dark-mode-toggle-icon-size: 2rem;
    --dark-mode-toggle-light-icon: url(/img/dark-mode/sun-light.svg);
    --dark-mode-toggle-dark-icon: url(/img/dark-mode/half-moon.svg);
  }

  @layer base {
    header {
      @apply bg-blue-300 dark:bg-blue-700 shadow-md p-4;
      @apply z-50 flex justify-between md:flex-col items-center sticky inset-y-0 px-4;
      @apply dark:md:bg-blue-600 md:justify-between md:flex-row;
    }
  }

  @layer components {
    dark-mode-toggle {
      width: 2.5rem;
    }
    #open_nav_btn {
      @apply text-2xl dark:text-slate-200;
      @apply md:hidden;
      &:active {
        @apply dark:text-slate-400;
      }
      [astro-icon] {
        @apply w-6 h-6;
      }
    }
    .logo {
      @apply bg-purple-800 text-white shadow-inner shadow-slate-800 border-black;
      @apply w-12 h-12 flex justify-center items-center rounded-full;
      @apply mr-auto ml-4;
    }
  }
</style>