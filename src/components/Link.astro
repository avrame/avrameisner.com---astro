---
interface Props {
  href: string;
  external?: boolean;
  classes?: string;
  icon?: string;
}
import { Icon } from "astro-icon"

const { href, classes, external, icon } = Astro.props;
const target = external ? "_blank" : undefined;
---

<a
  href={href}
  target={target}
  class={`underline text-cyan-200 hover:text-cyan-400 ${classes}`}
>
  {icon && <Icon pack="iconoir" name={icon} />}
  <slot />
</a>

<style>
  @tailwind components;

  @layer components{
    a {
      [astro-icon] {
        @apply w-4 h-4;
      }
    }
  }
</style>
