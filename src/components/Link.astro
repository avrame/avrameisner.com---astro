---
interface Props {
  href: string;
  external?: boolean;
  classes?: string;
  icon?: string;
}
import { Icon } from "astro-icon"

const { href, classes = '', external, icon } = Astro.props;
const target = external ? "_blank" : undefined;
---

<a
  href={href}
  target={target}
  class={classes}
>
  {icon && <Icon pack="iconoir" name={icon} />}
  <slot />
</a>

<style>
  @tailwind components;

  @layer components{
    a {
      @apply underline text-blue-700 hover:text-blue-900 dark:text-cyan-200 dark:hover:text-cyan-400;
      @apply transition-colors;
      [astro-icon] {
        @apply w-4 h-4;
      }
    }
  }
</style>
