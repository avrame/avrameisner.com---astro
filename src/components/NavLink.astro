---
interface Props {
  text: string;
  href: string;
}

const { href, text } = Astro.props;
const { pathname } = new URL(Astro.url);
---

<a
  href={href}
  class:list={[
    "bg-blue-700",
    "hover:bg-blue-800",
    "active:bg-purple-800",
    "px-6",
    "py-2",
    { "bg-blue-900": href === pathname },
  ]}>{text}</a
>
